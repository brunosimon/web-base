	// -------------o Replace all src attributes by a data-src attribute to preload img

	var imgs = document.getElementsByTagName("img");

	for (var i = 0; i < imgs.length; i++){
		var 
			img = imgs[i],
			src = img.src;

		img.src = '';
		img.setAttribute('data-src', src);
